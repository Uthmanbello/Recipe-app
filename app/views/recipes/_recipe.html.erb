<div id="<%= dom_id recipe %>">
  <p>
    <h1 class='text-center'><%= recipe.name %></h1>
  </p>
  <div class='d-flex justify-content-between'>
    <div>
      <p>
        <strong>Preparation time:</strong>
        <%= recipe.prep_time %> hour(s)
      </p>

      <p>
        <strong>Cooking time:</strong>
        <%= recipe.cooking_time %> hour(s)
      </p>

      <p>
        <strong>Description:</strong>
        <%= recipe.description %>
      </p>
    </div>

    <div>
      <p>
        <strong>Public:</strong>
        <%= recipe.public %>
      </p>

    <%= form_with model: recipe, local: true, html: { id: "recipe-form" } do |f| %>
      <div class="form-check">
        <strong>
          <%= f.label :public, class: "form-check-label" do %>
            Public
          <% end %>
        </strong>
        <%= f.check_box :public, class: "form-check-input", onchange: "this.form.submit();" %>
      </div>
      <%= f.submit "", class: "visually-hidden" %>
    <% end %>

    </div>
  </div>
</div>
